<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pengunjung.TampilDetailKebutuhan"
    android:id="@+id/coordinatorLay">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="55dp"
        android:layout_width="match_parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_collapseMode="pin"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            />

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center"
            android:id="@+id/ll">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/tvDataUang"
                            android:layout_width="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_light"
                            android:textColor="#585858"
                            android:text="A. Kebutuhan Data Uang "/>

                        <LinearLayout
                            android:id="@+id/LUang"
                            android:padding="13dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/border_form"
                            >
                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp">

                                <android.support.design.widget.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/etUang"
                                    android:textSize="15dp"
                                    android:hint="Nominal Uang"
                                    android:fontFamily="@font/roboto_light"
                                    android:inputType="number"/>
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp">

                                <android.support.design.widget.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/etDigunakan"
                                    android:textSize="15dp"
                                    android:fontFamily="@font/roboto_light"
                                    android:hint="Keperluan" />
                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvDataAlat"
                            android:layout_width="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_light"
                            android:textColor="#585858"
                            android:text="B. Kebutuhan Data Alat"/>

                        <LinearLayout
                            android:id="@+id/LAlat"
                            android:padding="13dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/border_form"
                            >
                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp">

                                <android.support.design.widget.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/etBarang"
                                    android:textSize="15dp"
                                    android:hint="Nama Barang"
                                    android:fontFamily="@font/roboto_light" />
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp">

                                <android.support.design.widget.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/etJumlah"
                                    android:textSize="15dp"
                                    android:fontFamily="@font/roboto_light"
                                    android:hint="Jumlah" />
                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvDataSdm"
                            android:layout_width="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_light"
                            android:textColor="#585858"
                            android:text="C. Kebutuhan Data SDM "/>

                        <LinearLayout
                            android:id="@+id/LSdm"
                            android:padding="13dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/border_form"
                            >
                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp">

                                <android.support.design.widget.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/etNamaSDM"
                                    android:textSize="15dp"
                                    android:hint="Nama"
                                    android:fontFamily="@font/roboto_light"/>
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp">

                                <android.support.design.widget.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/etJk"
                                    android:textSize="15dp"
                                    android:fontFamily="@font/roboto_light"
                                    android:hint="Jenis Kelamin" />
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp">

                                <android.support.design.widget.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/etAgama"
                                    android:textSize="15dp"
                                    android:fontFamily="@font/roboto_light"
                                    android:hint="Agama" />
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp">

                                <android.support.design.widget.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/etKeahlian"
                                    android:textSize="15dp"
                                    android:fontFamily="@font/roboto_light"
                                    android:hint="Keahlian" />
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp">

                                <android.support.design.widget.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/etJumlahSdm"
                                    android:textSize="15dp"
                                    android:fontFamily="@font/roboto_light"
                                    android:hint="Jumlah" />
                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

            <LinearLayout
                android:clipToPadding="false"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="ID"
                    android:id="@+id/etIdkebutuhan"
                    android:fontFamily="@font/meera_inimai"
                    android:visibility="gone"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Update"
                    android:textColor="#fff"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/btnUpdate"
                    android:fontFamily="@font/meera_inimai"
                    android:clickable="true"
                    android:textSize="16dp"
                    android:visibility="gone"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Hapus"
                    android:textColor="#fff"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/btnHapus"
                    android:fontFamily="@font/meera_inimai"
                    android:clickable="true"
                    android:textSize="16dp"
                    android:visibility="gone"
                    />

            </LinearLayout>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>